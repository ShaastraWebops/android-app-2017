<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="shaastra.com.android_app_2017.SummitEvents">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:id="@+id/summit_build"
                    android:src="@drawable/summit2"
                    android:layout_marginBottom="10dp" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Events"
                    android:layout_below="@+id/summit_build"
                    android:layout_marginTop="5dp"
                    android:id="@+id/summ_events_title"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/summit_events_para1"
                    android:layout_below="@id/summ_events_title"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:id="@+id/summit_events_para1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/summit_events_para2"
                    android:layout_below="@id/summit_events_para1"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="5dp"
                    android:textColor="#000"
                    android:id="@+id/summit_events_para2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/summit_events_para3"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_below="@id/summit_events_para2"
                    android:layout_marginTop="10dp"
                    android:textColor="#000"
                    android:id="@+id/summit_events_para3" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/summit_events_para4"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_below="@id/summit_events_para3"
                    android:layout_marginTop="10dp"
                    android:textColor="#000"
                    android:id="@+id/summit_events_para4" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/summit_events_para5"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_below="@id/summit_events_para4"
                    android:layout_marginTop="10dp"
                    android:textColor="#000"
                    android:id="@+id/summit_events_para5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Schedule- International Accessibility Summit: http://www.shaastra.org/images/Schedule%20-%20Accessbility%20Summit%20(Shaastra%202017).pdf"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_below="@id/summit_events_para5"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:textColor="#000"
                    android:id="@+id/summit_schedule"
                    android:autoLink="web"
                    android:textColorLink="#FF164165"/>



            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
