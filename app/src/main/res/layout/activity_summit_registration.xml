<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="shaastra.com.android_app_2017.SummitRegistration">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:id="@+id/summit_build"
                    android:src="@drawable/summit2"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registration"
                    android:layout_below="@+id/summit_build"
                    android:id="@+id/summ_registration_title"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You can register for the International Accessibility Summit here: https://docs.google.com/forms/d/e/1FAIpQLSesIxhGS99XVaZH0rlEcdRpbQOThKEFEeR4W83c220nlScKaw/viewform?c=0&amp;w=1"
                    android:layout_below="@id/summ_registration_title"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:id="@+id/summit_registration_para1"
                    android:autoLink="web"
                    android:textColorLink="#FF164165"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/summit_registration_para2"
                    android:paddingLeft="5dp"
                    android:layout_below="@id/summit_registration_para1"
                    android:layout_marginTop="10dp"
                    android:textColor="#000"
                    android:id="@+id/summit_registration_para2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/summit_registration_para3"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_below="@id/summit_registration_para2"
                    android:layout_marginTop="16dp"
                    android:textColor="#000"
                    android:id="@+id/summit_registration_para3" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/summit_registration_para4"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_below="@id/summit_registration_para3"
                    android:layout_marginTop="16dp"
                    android:textColor="#000"
                    android:id="@+id/summit_registration_para4" />
                <TableLayout
                    android:id="@+id/fee_table"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/summit_registration_para4"
                    android:layout_marginTop="8dp">

                    <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/r1c1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:text="         IITM students        "
                            android:textColor="#000"/>

                        <TextView
                            android:id="@+id/r1c2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:text="        Other students        "
                            android:textColor="#000"/>
                    </TableRow>
                    <TableRow
                        android:id="@+id/tableRow2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/r2c1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:text="              ₹500    "
                            android:textColor="#000"/>

                        <TextView
                            android:id="@+id/r2c2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:text="             ₹1000     "
                            android:textColor="#000"/>
                    </TableRow>
                </TableLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/summit_registration_para5"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_below="@id/fee_table"
                    android:layout_marginTop="10dp"
                    android:textColor="#000"
                    android:id="@+id/summit_registration_para5" />




            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
