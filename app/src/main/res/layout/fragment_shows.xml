<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="shaastra.com.android_app_2017.ShowsFragment">

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:padding="0dp"
                    android:adjustViewBounds="true"
                    android:id="@+id/shows_title"
                    android:src="@drawable/shows_title_banner"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#000000"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/shows_text"
                android:text="@string/shows_text"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:padding="0dp"
                    android:adjustViewBounds="true"
                    android:id="@+id/envisage_title"
                    android:src="@drawable/subtitle_shows"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/envisage"
                android:adjustViewBounds="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/envisage_text"
                android:textSize="17sp"
                android:textColor="#000000"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/envisage_text"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:paddingLeft="10dp"
                    android:adjustViewBounds="true"
                    android:id="@+id/exhibitions_title"
                    android:src="@drawable/exhibitions_title_banner"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#000000"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/exhibitions_text"/>
        </LinearLayout>

    </FrameLayout>
</ScrollView>