<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="shaastra.com.android_app_2017.SummitSpeakers">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-30dp"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/summit_banner"
                    android:id="@+id/summit_banner"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speakers"
                    android:layout_below="@+id/summit_banner"
                    android:layout_marginTop="-55dp"
                    android:id="@+id/summ_speakers_title"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="@string/summit_speakers_para1"
                    android:layout_below="@id/summ_speakers_title"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:layout_alignParentRight="true"
                    android:id="@+id/summit_speakers_para1"/>

                <FrameLayout
                    android:id="@+id/frame1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignTop="@+id/summit_speakers_para1"
                    android:layout_toLeftOf="@+id/summit_speakers_para1"
                    android:layout_marginTop="100dp">

                    <ImageView
                        android:id="@+id/pic1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/suranga" />

                    <ImageView
                        android:id="@+id/circle_crop1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/square_circle" />
                </FrameLayout>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Suranga Nanayakkara (Lecture - Technical) Singapore University of Technology and Design"
                    android:layout_below="@+id/frame1"
                    android:layout_marginTop="-10dp"
                    android:textColor="#333"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="@string/summit_speakers_para2"
                    android:layout_below="@id/summit_speakers_para1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:layout_alignParentRight="true"
                    android:id="@+id/summit_speakers_para2"/>

                <FrameLayout
                    android:id="@+id/frame2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignTop="@+id/summit_speakers_para2"
                    android:layout_toLeftOf="@+id/summit_speakers_para2"
                    android:layout_marginTop="100dp">

                    <ImageView
                        android:id="@+id/pic2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/amba" />

                    <ImageView
                        android:id="@+id/circle_crop2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/square_circle" />
                </FrameLayout>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Amba Salelkar (Lecture - Policy) Equals Centre for Promotion of Social Justice"
                    android:layout_below="@+id/frame2"
                    android:layout_marginTop="-10dp"
                    android:textColor="#333"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="@string/summit_speakers_para3"
                    android:layout_below="@id/summit_speakers_para2"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:layout_alignParentRight="true"
                    android:id="@+id/summit_speakers_para3"/>

                <FrameLayout
                    android:id="@+id/frame3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignTop="@+id/summit_speakers_para3"
                    android:layout_toLeftOf="@+id/summit_speakers_para3"
                    android:layout_marginTop="100dp">

                    <ImageView
                        android:id="@+id/pic3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/george" />

                    <ImageView
                        android:id="@+id/circle_crop3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/square_circle" />
                </FrameLayout>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="George Abraham (Lecture - “My Journey”) Score Foundation"
                    android:layout_below="@+id/frame3"
                    android:layout_marginTop="-10dp"
                    android:textColor="#333"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="@string/summit_speakers_para4"
                    android:layout_below="@id/summit_speakers_para3"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:layout_alignParentRight="true"
                    android:id="@+id/summit_speakers_para4"/>

                <FrameLayout
                    android:id="@+id/frame4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignTop="@+id/summit_speakers_para4"
                    android:layout_toLeftOf="@+id/summit_speakers_para4"
                    android:layout_marginTop="100dp">

                    <ImageView
                        android:id="@+id/pic4"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/dipendra" />

                    <ImageView
                        android:id="@+id/circle_crop4"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/square_circle" />
                </FrameLayout>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Dipendra Manocha (Panelist) DAISY Consortium"
                    android:layout_below="@+id/frame4"
                    android:layout_marginTop="-10dp"
                    android:textColor="#333"
                    android:textSize="12sp"/>


            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>